
<%- include('../layouts/side.ejs') %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Management</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    
    <style>
        /* Resetting default styles */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Times New Roman', Times, serif;
            background-color: #eef2f7;
            color: #333;
            margin: 0;
            padding: 0;
        }

        /* Centering the h1 element */
        h1 {
            text-align: center;
            margin-top: 50px; /* Adjust as needed */
            color: #4a4a4a;
        }

        /* Basic styling for the container */
        .container {
            max-width: 1000px;
            margin: 0 auto;
            padding: 20px;
            margin-right:500px;
        }

        /* Styling for the table */
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
            background-color: #fff;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            overflow: hidden;
            
        }

        th, td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: black;
            color:white;
            font-weight: 600;
        }

        tbody tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        tbody tr:hover {
            background-color: #f1f1f1;
        }

        /* Pagination Styling */
        .pagination {
            text-align: center;
            margin-top: 20px;
        }

        .pagination a {
            color: #333;
            padding: 10px 20px;
            text-decoration: none;
            margin: 0 5px;
            border: 1px solid #ddd;
            border-radius: 5px;
            background-color: #fff;
            transition: background-color 0.3s, color 0.3s;
        }

        .pagination a.active {
            background-color: #4caf50;
            color: white;
            border-color: #4caf50;
        }

        .pagination a:hover {
            background-color: #ddd;
        }

        /* Button Styling */
        .btn-block, .btn-unblock {
            padding: 8px 16px;
            cursor: pointer;
            border: none;
            border-radius: 5px;
            transition: background-color 0.3s, opacity 0.3s;
        }

        .btn-block {
            background-color: #e74c3c;
            color: white;
        }

        .btn-unblock {
            background-color: #2ecc71;
            color: white;
        }

        .btn-block:hover, .btn-unblock:hover {
            opacity: 0.8;
        }

        @media only screen and (max-width: 768px) {
            th, td {
                padding: 10px;
                font-size: 14px;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>User Management</h1>

        

        <div style="overflow-x:hidden">
            <table>
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Mobile</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (users.length > 0) { %>
                        <% for (let i = 0; i < users.length; i++) { %>
                            <tr>
                                <td><%= users[i].name %></td>
                                <td><%= users[i].email %></td>
                                <td><%= users[i].mobile %></td>
                                <td>
                                    <% if (users[i].blocked) { %>
                                        <button class="btn-unblock" onclick="toggleUserStatus('<%= users[i]._id %>')">Unblock</button>
                                    <% } else { %>
                                        <button class="btn-block" onclick="confirmBlock('<%= users[i]._id %>')">Block</button>
                                    <% } %>
                                </td>
                            </tr>
                        <% } %>
                    <% } else { %>
                        <tr>
                            <td colspan="4" style="text-align: center;">No users found</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        <div class="pagination">
            <% if (currentPage > 1) { %>
                <a href="?page=<%= currentPage - 1 %>&search=<%= search %>">Previous</a>
            <% } %>

            <% for (let i = 1; i <= totalPages; i++) { %>
                <a href="?page=<%= i %>&search=<%= search %>" class="<%= currentPage === i ? 'active' : '' %>"><%= i %></a>
            <% } %>

            <% if (currentPage < totalPages) { %>
                <a href="?page=<%= currentPage + 1 %>&search=<%= search %>">Next</a>
            <% } %>
        </div>
    </div>

    <!-- Add the SweetAlert script tag here -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>

    <script>
        function confirmBlock(userId) {
            Swal.fire({
                title: 'Are you sure?',
                text: 'You are about to block this user.',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#dc3545',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Block'
            }).then((result) => {
                if (result.isConfirmed) {
                    toggleUserStatus(userId);
                }
            });
        }

        function toggleUserStatus(userId) {
            fetch(`/admin/users/${userId}/toggle-block`, {
                method: 'POST'
            }).then(response => {
                if (response.ok) {
                    location.reload(); // Refresh the page after successful update
                }
            })
        }
    </script>
</body>
</html>