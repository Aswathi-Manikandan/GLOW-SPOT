<%- include('../layouts/side.ejs') %>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Offers</title>
    <link rel="stylesheet" href="/styles/offers.css"> <!-- Include your custom CSS file -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"> <!-- Font Awesome -->

</head>
<style>
    /* styles/offers.css */

    body {
        font-family: 'Times New Roman', Times, serif;
        background-color: #f8f9fa;
        margin: 0;
        padding: 20px;
    }

    .container {
        max-width: 1000px;
        margin: 0 auto;
        padding: 20px;
        background-color: #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
        margin-right: 100px;
        margin-top: 70px;
    }

    .heading {
        font-size: 28px;
        margin-bottom: 20px;
        text-align: center;
        color: #343a40;
    }

    .offer-table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

    .offer-table th, .offer-table td {
        border: 1px solid #ddd;
        padding: 12px;
        text-align: center;
    }

    .offer-table th {
        background-color: #1a2b3d;
        color: white;
    }

    .offer-table tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    .offer-table .edit-link, .offer-table .remove-link {
        color: #112030;
        text-decoration: none;
        background: none;
        border: none;
        cursor: pointer;
        font-size: 14px;
        padding: 6px 12px;
        border-radius: 5px;
        transition: background-color 0.3s;
    }

    .offer-table .edit-link:hover, .offer-table .remove-link:hover {
        background-color: #e2e6ea;
    }

    .add-offer-link {
        display: inline-block;
        margin: 20px auto;
        padding: 10px 20px;
        background-color: #192736;
        color: #fff;
        text-decoration: none;
        border-radius: 5px;
        text-align: center;
        transition: background-color 0.3s;
    }

    .add-offer-link:hover {
        background-color: #24374d;
    }

    .pagination {
        margin-top: 20px;
        text-align: center;
    }

    .pagination a {
        color: #19293a;
        padding: 8px 16px;
        text-decoration: none;
        transition: background-color 0.3s;
    }

    .pagination a:hover {
        background-color: #e2e6ea;
    }

    .pagination .active {
        background-color: #1f3246;
        color: white;
        border-radius: 5px;
    }

    .icon-button {
        color: black;
        border: none;
        background: none;
        cursor: pointer;
        font-size: 16px;
        padding: 6px;
        transition: color 0.3s;
    }

    .icon-button:hover {
        color: black;
    }
</style>
<body>
    <div class="container">
        <h1 class="heading">Offers</h1>

        <table class="offer-table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Discount (%)</th>
                    <th>Starting Date</th>
                    <th>Expiry Date</th>
                    <th>Edit</th>
                    <th>Remove</th> <!-- Changed to Remove -->
                </tr>
            </thead>
            <tbody>
                <% offers.forEach(offer => { %>
                    <tr>
                        <td><%= offer.name %></td>
                        <td><%= offer.discount %></td>
                        <td><%= offer.startingDate ? offer.startingDate.toDateString() : '' %></td>
                        <td><%= offer.expiryDate ? offer.expiryDate.toDateString() : '' %></td>
                        <td>
                            <a href="/admin/offers/edit/<%= offer._id %>" class="icon-button">
                                <i class="fas fa-edit"></i>
                            </a>
                        </td>
                        <td>
                            <button onclick="removeOffer('<%= offer._id %>')" class="icon-button">
                                <i class="fas fa-trash-alt"></i>
                            </button>
                        </td>
                        
                    </tr>

                <% }); %>
            </tbody>
        </table>
        <div class="pagination">
            <% if (currentPage > 1) { %>
                <a href="?page=<%= currentPage - 1 %>">&laquo; Previous</a>
            <% } %>
            <% for (let i = 1; i <= totalPages; i++) { %>
                <a href="?page=<%= i %>" class="<%= i === currentPage ? 'active' : '' %>"><%= i %></a>
            <% } %>
            <% if (currentPage < totalPages) { %>
                <a href="?page=<%= currentPage + 1 %>">Next &raquo;</a>
            <% } %>
        </div>
        <a href="/admin/offers/add" class="add-offer-link">Add New Offer</a>
        
    </div>
   
    <script>
        async function removeOffer(id) {
            if (confirm('Are you sure you want to remove this offer?')) {
                try {
                    const response = await fetch(`/admin/offers/delete/${id}`, {
                        method: 'DELETE',
                        headers: {
                            'Content-Type': 'application/json'
                        }
                    });
                    if (response.ok) {
                        location.reload(); // Reload the page after successful deletion
                    } else {
                        alert('Failed to remove offer');
                    }
                } catch (error) {
                    console.error('Error removing offer:', error);
                    alert('Failed to remove offer');
                }
            }
        }
    </script>
    
</body>
</html>
