<%- include('../layouts/side.ejs') %>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Offer</title>
    <link rel="stylesheet" href="/styles/editOffer.css"> <!-- Include your custom CSS file -->
</head>
<style>
    /* styles/editOffer.css */

.container {
    max-width: 1000px;
    margin: 0 auto;
    padding: 20px;
    border: 1px solid #ccc;
    border-radius: 5px;
    margin-right: 300px;
    margin-top: 80px;
}

.heading {
    text-align: center;
    margin-bottom: 20px;
    font-family: 'Times New Roman', Times, serif;
}

form {
    display: flex;
    flex-direction: column;
    font-family: 'Times New Roman', Times, serif;
    width: 400px;
}

label {
    margin-bottom: 10px;
}

input {
    padding: 10px;
    margin-bottom: 20px;
    border: 1px solid #ccc;
    border-radius: 5px;
}

button {
    padding: 10px 20px;
    background-color: #192633;
    color: #fff;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    font-family: 'Times New Roman', Times, serif;
}

button:hover {
    background-color: #1b2735;
}

</style>
<body>
    <div class="container">
        <h1 class="heading">Edit Offer</h1>

        <form action="/admin/offers/edit/<%= offer._id %>" method="post">
            <label>Name</label>
            <input type="text" name="name" value="<%= offer.name %>" required>

            <label>Discount (%)</label>
            <input type="number" name="discount" value="<%= offer.discount %>" required>

            <label>Starting Date</label>
            <input type="date" name="startingDate" value="<%= offer.startingDate %>">

            <label>Expiry Date</label>
            <input type="date" name="expiryDate" value="<%= offer.expiryDate %>" required>

            <button type="submit">Update Offer</button>
        </form>
    </div>
</body>
</html>
