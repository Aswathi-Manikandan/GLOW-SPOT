<style>
    /* CSS styles for the banner overlay */
.banner-overlay {
    position: absolute;
    top: 40px; /* Adjust the distance from the top border */
    left: 40px; /* Adjust the distance from the left border */
    right: 40px; /* Adjust the distance from the right border */
    bottom: 40px; /* Adjust the distance from the bottom border */
    box-sizing: border-box; /* Ensure border width is included in the element's dimensions */
    background-color: rgba(210, 205, 223, 0.5); /* Transparent background color */
    opacity: 0; /* Initially hidden */
    transition: opacity 0.5s ease-in-out; /* Add transition effect for smooth animation */
}
.banner img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.6s ease-in-out;
            border-radius: 8px;
        }
/* Apply styles on hover */
.banner:hover .banner-overlay {
    opacity: 1; /* Show the overlay on hover */
}

.text-container {
    position: absolute;
    top: 60px; /* Adjust as needed */
    left: 50%; /* Center horizontally */
    transform: translateX(-50%);
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    z-index: 1; /* Ensure the text is above the image */
}

.glow-text {
    font-size: 10rem;
    color: rgb(27, 27, 27);
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 170px;
    font-family: 'Times New Roman', Times, serif;
}

.glow, .spot {
    opacity: 0;
}

.glow {
    animation: slideInFromLeft 4s forwards, lightningEffect 1s 3s forwards;
    margin-right: 20px; /* Add gap between Glow and Spot */
}

.spot {
    animation: slideInFromRight 4s forwards, lightningEffect 1s 3s forwards;
    margin-left: 20px; /* Add gap between Glow and Spot */
}

@keyframes slideInFromLeft {
    from {
        transform: translateX(-100%);
        opacity: 0;
    }
    to {
        transform: translateX(0);
        opacity: 1;
    }
}

@keyframes slideInFromRight {
    from {
        transform: translateX(100%);
        opacity: 0;
    }
    to {
        transform: translateX(0);
        opacity: 1;
    }
}

@keyframes lightningEffect {
    0% {
        text-shadow: none;
    }
    25% {
        text-shadow: 0 0 20px #fff, 0 0 30px #fff, 0 0 40px #fff, 0 0 50px #fff, 0 0 60px #fff, 0 0 70px #fff, 0 0 80px #fff;
    }
    50% {
        text-shadow: none;
    }
    75% {
        text-shadow: 0 0 20px #fff, 0 0 30px #fff, 0 0 40px #fff, 0 0 50px #fff, 0 0 60px #fff, 0 0 70px #fff, 0 0 80px #fff;
    }
    100% {
        text-shadow: none;
    }
}


