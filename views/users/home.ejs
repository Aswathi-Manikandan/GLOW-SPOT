<style>
    .product {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.product:hover {
    transform: translateY(-10px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
}

.product .product-link {
    display: block;
    position: relative;
}

.product .product-media {
    position: relative;
    overflow: hidden;
}

.product .product-media img {
    transition: transform 0.5s ease;
}

.product .product-media:hover img {
    transform: scale(1.1);
}

.product .product-action {
    margin-top: 10px;
}

.btn-product-icon {
    transition: background-color 0.3s ease;
}

.btn-product-icon:hover {
    background-color: #fcb800; /* Example color */
}

/* AOS animations */
[data-aos="fade-up"] {
    opacity: 0;
    transform: translateY(20px);
    transition-property: opacity, transform;
}

[data-aos="fade-up"].aos-animate {
    opacity: 1;
    transform: translateY(0);
}

[data-aos="zoom-in"] {
    opacity: 0;
    transform: scale(0.9);
    transition-property: opacity, transform;
}

[data-aos="zoom-in"].aos-animate {
    opacity: 1;
    transform: scale(1);
}
.banner {
    overflow: hidden; /* Ensures that the content doesn't overflow out of the container */
    position: relative; /* Required for the overlay effect */
}

.banner img {
    transition: transform 0.3s ease; /* Smooth transition for the zoom effect */
    width: 100%;
    height: auto;
}

.banner:hover img {
    transform: scale(1.1); /* Scale up the image slightly on hover */
}

.banner-content {
    transition: opacity 0.3s ease; /* Smooth transition for the fade effect */
}

.banner:hover .banner-content {
    opacity: 1; /* Make the content fully opaque on hover */
}


</style>
