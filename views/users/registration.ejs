<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registration Form</title>
    <style>
        body, html {
            margin: 0;
            padding: 0;
            width: 100%;
            height: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: #000;
            font-family: 'Times New Roman', Times, serif;
        }

        .content {
            display: flex;
            flex-direction: column;
            align-items: center;
            width: 100%;
            padding-top: 20px;
            position: absolute;
            top: 20px;
        }

        .glow-text {
            font-size: 2rem;
            color: #fff;
            text-align: center;
            animation: fadeIn 3s forwards, slideInFromTop 3s forwards;
            opacity: 0;
            margin: 0;
        }

        @keyframes fadeIn {
            to {
                opacity: 1;
            }
        }

        @keyframes slideInFromTop {
            from {
                transform: translateY(-50px);
            }
            to {
                transform: translateY(0);
            }
        }

        .center-container {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            width: 90%;
            max-width: 700px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 10px;
            box-shadow: 0 8px 32px 0 rgba(201, 202, 218, 0.37);
            backdrop-filter: blur(4px);
            -webkit-backdrop-filter: blur(4px);
            overflow: hidden;
            margin-top: 50px;
            padding: 20px;
        }

        .half {
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 20px;
            width: 100%;
        }

        .half img {
            max-width: 100%;
            height: auto;
            border-radius: 10px;
        }

        .registration-form {
            width: 100%;
            max-width: 400px;
            color: black;
            text-align: center;
        }

        .registration-form h1, .registration-form h4, .registration-form h5 {
            color: white;
        }

        .registration-form input[type="text"],
        .registration-form input[type="email"],
        .registration-form input[type="password"],
        .registration-form input[type="submit"] {
            width: 90%;
            padding: 10px;
            margin: 10px 0;
            border: 1px solid #ccc;
            border-radius: 30px;
            background: white;
            color: black;
        }

        .registration-form input[type="submit"] {
            background-color: black;
            color: white;
            cursor: pointer;
            width: 100px;
            margin-left: 5px;
        }

        .registration-form a {
            color: white;
            text-decoration: none;
        }

        .error-message {
            color: red;
            margin-bottom: 10px;
        }

        @media (min-width: 768px) {
            .center-container {
                flex-direction: row;
                height: auto;
            }

            .half {
                flex: 1;
            }

            .half img {
                max-width: 100%;
            }

            .registration-form {
                width: 100%;
                max-width: 400px;
            }
        }

        @media (max-width: 768px) {
            .glow-text {
                font-size: 1.5rem;
            }

            .center-container {
                width: 90%;
                padding: 10px;
            }

            .registration-form input[type="text"],
            .registration-form input[type="email"],
            .registration-form input[type="password"],
            .registration-form input[type="submit"] {
                width: 100%;
            }

            .registration-form input[type="submit"] {
                width: 100%;
            }
        }
    </style>
</head>
<body>
    <div class="content">
        <h1 class="glow-text">Registration</h1>
    </div>
    <div class="center-container">
        <div class="half">
            <img src="images/signup.jpg" alt="Registration Image">
        </div>
        <div class="half">
            <div class="registration-form">
                <h1>Registration Form</h1>
                <% if (message) { %>
                    <div class="error-message"><%= message %></div>
                <% } %>
                <form action="/register" method="post" onsubmit="return validateForm()">
                    <input type="text" name="name" id="name" placeholder="Enter Name" required><br>
                    <input type="email" name="email" id="email" placeholder="Enter Email" required><br>
                    <input type="text" name="mno" id="mno" placeholder="Enter Mobile" required><br>
                    <input type="password" name="password" id="password" placeholder="Enter Password" required><br>
                    <input type="password" name="confirmPassword" id="confirmPassword" placeholder="Confirm Password" required><br>
                    <input type="submit" value="Register"><br>
                    <a href="/login">Login</a>
                    <div id="errorName" class="error"></div>
                    <div id="errorEmail" class="error"></div>
                    <div id="errorMobile" class="error"></div>
                    <div id="errorPassword" class="error"></div>
                    <div id="errorConfirmPassword" class="error"></div>
                </form>
            </div>
        </div>
    </div>
    <script>
        function validateForm() {
            var name = document.getElementById("name").value;
            var email = document.getElementById("email").value;
            var mobile = document.getElementById("mno").value;
            var password = document.getElementById("password").value;
            var confirmPassword = document.getElementById("confirmPassword").value;

            var errorName = document.getElementById("errorName");
            var errorEmail = document.getElementById("errorEmail");
            var errorMobile = document.getElementById("errorMobile");
            var errorPassword = document.getElementById("errorPassword");
            var errorConfirmPassword = document.getElementById("errorConfirmPassword");

            // Reset error messages
            errorName.innerHTML = "";
            errorEmail.innerHTML = "";
            errorMobile.innerHTML = "";
            errorPassword.innerHTML = "";
            errorConfirmPassword.innerHTML = "";

            var isValid = true;

            // Basic validation for name, email, mobile, password, and confirm password
            if (name.trim() === "") {
                errorName.innerHTML = "Name is required";
                isValid = false;
            }

            if (email.trim() === "") {
                errorEmail.innerHTML = "Email is required";
                isValid = false;
            } else if (!isValidEmail(email)) {
                errorEmail.innerHTML = "Enter a valid email address";
                isValid = false;
            }

            if (mobile.trim() === "") {
                errorMobile.innerHTML = "Mobile number is required";
                isValid = false;
            } else if (!isValidMobile(mobile)) {
                errorMobile.innerHTML = "Enter a valid mobile number";
                isValid = false;
            }

            if (password.trim() === "") {
                errorPassword.innerHTML = "Password is required";
                isValid = false;
            }

            if (confirmPassword.trim() === "") {
                errorConfirmPassword.innerHTML = "Please confirm your password";
                isValid = false;
            }

            if (password !== confirmPassword) {
                errorConfirmPassword.innerHTML = "Passwords do not match";
                isValid = false;
            }

            return isValid;
        }

        function isValidEmail(email) {
            var emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            return emailRegex.test(email);
        }

        function isValidMobile(mobile) {
            var mobileRegex = /^\d{10}$/;
            return mobileRegex.test(mobile);
        }
    </script>
</body>
</html>
