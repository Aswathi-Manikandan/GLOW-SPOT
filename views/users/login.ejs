<style>
    body, html {
    margin: 0;
    padding: 0;
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #000;
    font-family: Arial, sans-serif;
    font-family: 'Times New Roman', Times, serif;
}

.content {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    padding-top: 20px;
    position: absolute;
    top: 20px;
    font-family: 'Times New Roman', Times, serif;
}

.glow-text {
    font-size: 4rem;
    color: #fff;
    text-align: center;
    animation: fadeIn 3s forwards, slideInFromTop 3s forwards;
    opacity: 0;
    margin: 0;
}

@keyframes fadeIn {
    to {
        opacity: 1;
    }
}

@keyframes slideInFromTop {
    from {
        transform: translateY(-50px);
    }
    to {
        transform: translateY(0);
    }
}


.center-container {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 50%;
    max-width: 1200px;
    height: 440px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 10px;
    box-shadow: 0 8px 32px 0 rgba(201, 202, 218, 0.37);
    backdrop-filter: blur(4px);
    -webkit-backdrop-filter: blur(4px);
    overflow: hidden;
    margin-top: 150px;
}

.half {
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 20px;
}

.half img {
    max-width: 120%;
    height: auto;
    border-radius: 10px;
}

.login-form {
    width: 100%;
    max-width: 400px;
    color: black;
    text-align: center;
}

.login-form h1, .login-form h4, .login-form h5 {
    color: black;
}

.login-form input[type="email"],
.login-form input[type="password"],
.login-form input[type="submit"] {
    width: 80%;
    padding: 10px;
    margin: 10px 0;
    border: 1px solid #ccc;
    border-radius: 30px;
    background: white;
    color: black;
}

.login-form input[type="submit"] {
    background-color: black;
    color: white;
    cursor: pointer;
    width: 80px;
    margin-left: 5px;
}

.login-form a {
    color: white;
    text-decoration: none;
}

.social-login-buttons {
    margin-top: 20px;
}

.social-login-buttons button {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 10px 20px;
    border: none;
    border-radius: 5px;
    background-color: white;
    color: black;
    cursor: pointer;
    font-family: 'Times New Roman', Times, serif;
}

.social-login-buttons button img {
    margin-right: 10px;
}

</style>


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Glow Spot</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <div class="content">
        <h1 class="glow-text">Glow Spot</h1>
    </div>
    <div class="center-container">
        <div class="half">
            <img src="images/login.jpg" alt="Login Image">
        </div>
        <div class="half">
            <div class="login-form">
                <div align="center">
                    <h1 style="color: white; font-size: large;">USER LOGIN</h1>
                    <% if(typeof message !== 'undefined'){ %>
                        <h4><%= message %></h4>
                    <% } %>
                    <form action="" method="post">
                        <input type="email" name="email" required placeholder="Enter email">
                        <br>
                        <input type="password" name="password" required placeholder="Enter password">
                        <br>
                        <input type="submit" value="Login"><br>
                        <a href="/register">Signup</a>
                    </form>
                    <p><a href="/forgot-password">Forgot Password?</a></p>
                    <h5>Or Login With Social Media</h5>
                    <div class="social-login-buttons">
                        <a href="/auth/google" class="google-login">
                            <button>
                                <img src="images/Google__G__logo.svg.png" alt="Google Icon" style="width: 20px; height: 20px; margin-right: 10px;"> Google
                            </button>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
