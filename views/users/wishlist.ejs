<% var loggedin = true; %> <!-- You can set it to true or false based on your logic -->
<%- include('../layouts/user-header.ejs', { loggedin: loggedin, user: user }) %>

<style>
    .wishlist-empty-message {
    text-align: center;
    color: red;
    font-size: x-large;
    font-family: 'Times New Roman', Times, serif;
}
body{
    font-family: 'Times New Roman', Times, serif;
}

</style>

<main class="main">
    <div class="page-header text-center" style="background-image: url('assets/images/page-header-bg.jpg')">
        <div class="container">
            <h1 class="page-title">Wishlist<span>Shop</span></h1>
        </div><!-- End .container -->
    </div><!-- End .page-header -->

    <nav aria-label="breadcrumb" class="breadcrumb-nav">
        <div class="container">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                <li class="breadcrumb-item"><a href="#">Shop</a></li>
                <li class="breadcrumb-item active" aria-current="page">Wishlist</li>
            </ol>
        </div><!-- End .container -->
    </nav><!-- End .breadcrumb-nav -->

    <div class="page-content">
        <div class="container">
            <% if (wishlist.length === 0) { %>
                <!-- Wishlist is empty -->
                <div class="wishlist-empty-message">
                    Wishlist Empty
                </div>
            <% } else { %>
                <!-- Wishlist is not empty, display wishlist table -->
                <table class="table table-wishlist table-mobile">
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th>Price</th>
                            <th>Stock Status</th>
                            <th></th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% wishlist.forEach(item => { %>
                            <tr>
                                <td class="product-col">
                                    <div class="product">
                                        <figure class="product-media">
                                            <a href="#">
                                                <img src="<%= item.product.pictures[0] %>" alt="Product image"> <!-- Assuming pictures is the field in the product object that stores the image URLs -->
                                            </a>
                                        </figure>

                                        <h3 class="product-title">
                                            <a href="#"><%= item.product.name %></a> <!-- Assuming name is the field in the product object that stores the product name -->
                                        </h3><!-- End .product-title -->
                                    </div><!-- End .product -->
                                </td>
                                
                                <td class="price-col">
                                    <!-- Check if there is a discount and show the discounted price if available -->
                                    <% if (item.product.discount > 0) { %>
                                        $<%= item.product.discount.toFixed(2) %>
                                        <span class="discounted-price">($<%= item.product.price.toFixed(2) %>)</span>
                                    <% } else { %>
                                        $<%= item.product.price.toFixed(2) %>
                                    <% } %>
                                </td>
                                <td class="stock-col">
                                    <% if (item.product.quantity === 0) { %>
                                        <span class="out-of-stock">Out of stock</span>
                                    <% } else { %>
                                        <span class="in-stock">In stock</span>
                                    <% } %>
                                </td>
                                
                                
                                <td class="remove-col">
                                    <!-- Remove button to remove product from wishlist -->
                                    <button class="btn btn-remove removeFromWishlistButton" data-product-id="<%= item.product._id %>">
                                        <i class="fas fa-trash"></i> <!-- Use a delete icon -->
                                    </button>
                                </td> 
                                <td class="buy-now-col">
                                    <button class="btn btn-buy-now buyNowButton" data-product-id="<%= item.product._id %>">
                                        Buy Now
                                    </button>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table><!-- End .table table-wishlist -->
            <% } %>
            <div class="wishlist-share">
                <div class="social-icons social-icons-sm mb-2">
                    <label class="social-label">Share on:</label>
                    <a href="#" class="social-icon" title="Facebook" target="_blank"><i class="icon-facebook-f"></i></a>
                    <a href="#" class="social-icon" title="Twitter" target="_blank"><i class="icon-twitter"></i></a>
                    <a href="#" class="social-icon" title="Instagram" target="_blank"><i class="icon-instagram"></i></a>
                    <a href="#" class="social-icon" title="Youtube" target="_blank"><i class="icon-youtube"></i></a>
                    <a href="#" class="social-icon" title="Pinterest" target="_blank"><i class="icon-pinterest"></i></a>
                </div><!-- End .soial-icons -->
            </div><!-- End .wishlist-share -->
        </div><!-- End .container -->
    </div><!-- End .page-content -->
</main><!-- End .main -->

<script>
    async function removeFromWishlist(productId) {
        try {
            const response = await fetch(`/wishlist/remove-from-wishlist/${productId}`, {
                method: 'DELETE',
                headers: {
                    'Content-Type': 'application/json'
                }
            });

            if (!response.ok) {
                throw new Error('Failed to remove product from wishlist');
            }

            // Refresh the page or update the wishlist display after successful removal
            location.reload(); // This will refresh the page, you can replace it with your desired action
        } catch (error) {
            console.error('Error removing product from wishlist:', error);
            // Handle error here, e.g., show an error message to the user
        }
    }

    async function buyNow(productId) {
        try {
            const response = await fetch(`/cart/add-to-cart/${productId}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                }
            });

            if (!response.ok) {
                throw new Error('Failed to add product to cart');
            }

            // Redirect to checkout page after adding product to cart
            window.location.href = '/checkout';
        } catch (error) {
            console.error('Error adding product to cart and redirecting to checkout:', error);
            // Handle error here, e.g., show an error message to the user
        }
    }

    document.addEventListener('DOMContentLoaded', function() {
        const removeFromWishlistButtons = document.querySelectorAll('.removeFromWishlistButton');
        removeFromWishlistButtons.forEach(button => {
            button.addEventListener('click', function() {
                const productId = button.getAttribute('data-product-id'); // Extract product ID from data attribute
                removeFromWishlist(productId);
            });
        });

        const buyNowButtons = document.querySelectorAll('.buyNowButton');
        buyNowButtons.forEach(button => {
            button.addEventListener('click', function() {
                const productId = button.getAttribute('data-product-id'); // Extract product ID from data attribute
                buyNow(productId);
            });
        });
    });
</script>

</body>
</html>
